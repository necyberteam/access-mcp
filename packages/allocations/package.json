  "repository": {
    "type": "git",
    "url": "https://github.com/necyberteam/access-mcp.git",
    "directory": "packages/allocations"
  },
  "homepage": "https://github.com/necyberteam/access-mcp/tree/main/packages/allocations",
  "bugs": {
    "url": "https://github.com/necyberteam/access-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@access-mcp/shared": "^0.3.1",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "axios": "^1.7.0",
    "express": "^4.18.0"
