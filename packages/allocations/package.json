{
  "name": "@access-mcp/allocations",
  "version": "0.4.0",
  "description": "MCP server for ACCESS-CI Allocations and Research Projects API",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "access-allocations": "dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run --exclude '**/*.integration.test.ts'",
    "test:watch": "vitest watch --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run '**/*.integration.test.ts'",
    "test:all": "vitest run",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "access-ci",
    "allocations",
    "research-projects",
