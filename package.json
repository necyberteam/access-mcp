{
  "name": "access-mcp-servers",
  "version": "0.2.3",
  "description": "MCP servers for ACCESS-CI APIs",
  "type": "module",
  "scripts": {
    "build": "npm run build --workspace=@access-mcp/shared && npm run build --workspace=@access-mcp/affinity-groups && npm run build --workspace=@access-mcp/compute-resources && npm run build --workspace=@access-mcp/system-status && npm run build --workspace=@access-mcp/software-discovery && npm run build --workspace=@access-mcp/xdmod-metrics && npm run build --workspace=@access-mcp/allocations",
    "build:clean": "npm run clean && npm run build",
    "clean": "rm -rf packages/*/dist",
    "build:all": "node scripts/build-all.js",
    "docs:generate": "node scripts/generate-docs.js",
    "docs:dev": "cd docs && npm run dev",
    "docs:build": "cd docs && npm run build",
    "docs:preview": "cd docs && npm run preview",
    "dev": "tsc --build --watch",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write .",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "bundle": "npm run build && node scripts/bundle-servers.js",
    "bundle:clean": "rm -rf bundles && npm run bundle",
    "release": "npm run bundle && node scripts/create-release.js",
    "release:clean": "rm -rf bundles release && npm run release",
    "publish:dry": "node scripts/publish-packages.js --dry-run",
    "publish:packages": "node scripts/publish-packages.js",
    "version:patch": "npm version patch --workspaces",
    "version:minor": "npm version minor --workspaces",
    "version:major": "npm version major --workspaces"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/express": "^4.17.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitest/ui": "^2.0.0",
    "esbuild": "^0.25.8",
    "eslint": "^8.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "vitest": "^2.0.0"
  }
}
